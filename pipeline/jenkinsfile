pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                script { 
                    sh """
                    pwd
                    python3 -m pip config set global.break-system-packages true
                    pip3 install robotframework robotframework-requests
                    python3 -m robot -d reportes -x robot.xml tests/test.robot
                    """
                }
            }
        }
    }
    post {
        always {
            junit 'reportes/robot.xml'
            cleanWs()
        }
    }
}