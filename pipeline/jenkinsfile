pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                sh 'pip install robotframework robotframework-request'
                sh 'robot test/test.robot'
                sh 'rebot -x output-junit.xml output.xml'
            }
        }
    }
    post {
        always {
            junit 'output.xml'
            cleanWs()
        }
    }
}