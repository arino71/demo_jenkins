pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                sh """
                pwd
                pip3 install robotframework robotframework-requests
                robot -d reportes tests/test.robot
                rebot -x output-junit.xml output.xml
                """
            }
        }
    }
    post {
        always {
            junit 'output.xml'
            cleanWs()
        }
    }
}